<h3 class = "text-center">パスワード編集ページ</h3>
<div class = "row">
  <div class = "offset-sm-2 col-sm-8">
    <%= form_with(model: @user, url: :password, local: true ) do |f| %>
    
      <% if @user.errors.any? %>
        <div id = "error-expranation" class = "alert alert-warning">
          <ul class = "mb-0">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class = "form-group">
        <%= f.label :current_password, "現在のパスワード" %>
        <%= f.password_field :current_password, class: "form-control"%>
      </div>
      <div class = "form-group">
        <%= f.label :password, "新しいパスワード" %>
        <%= f.password_field :password, class: "form-control"%>
      </div>
      <div class = "form-group">
        <%= f.label :password_confirmation, "確認用にもう１度入力してください" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      
      <%= f.submit "編集", class: "btn btn-block btn-primary"%>
    <% end %>
  </div>
</div>