
  <% if current_user.favorite?(tweet) %>
    <%= form_with(model: current_user.favorites.find_by(tweet_id: tweet.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :tweet_id, tweet.id %>
    <%= button_tag type: "submit", class: "btn" do %>
      <i class="fas fa-heart mr-1"></i><%= tweet.favorite_users.count %>
    <% end %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :tweet_id, tweet.id %>
    <%= button_tag type: "submit", class: "btn" do %>
      <i class="far fa-heart mr-1"></i><%= tweet.favorite_users.count %>
    <% end %>
    <% end %>
  <% end %>
