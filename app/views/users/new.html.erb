
<h3 class = "text-center">新規登録</h3>

<div class = "row">
  <div class = "offset-sm-2 col-sm-8">
    <%= form_with(model: @user, local: true ) do |f| %>

      <% if @user.errors.any? %>
        <div id = "error-expranation" class = "alert alert-warning">
          <ul class = "mb-0">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class = "form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: "form-control",required: true%>
      </div>
      <div class = "form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control" ,required: true%>
      </div>
      <div class = "form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "form-control" ,required: true%>
      </div>
      <div class = "form-group">
        <%= f.label :password_confirmation, "もう1度パスワードを入力して下さい" %>
        <%= f.password_field :password_confirmation, class: "form-control" ,required: true%>
      </div>
      <%= f.submit "アカウント作成", class: "btn btn-block btn-primary"%>
    <% end %>
  </div>
</div>
<p class = "text-center mt-3">アカウントをお持ちの方は<%= link_to("こちら", login_path)%>からログインしてください</p>
