<h3 class = "text-center">プロフィール編集</h3>


<%= form_with(model: @user, url: "/users/#{@user.id}/update_profile",local: true) do |f| %>

  <div class = "border rounded p-3 mb-4">
  <%= image_tag @user.image.show_user.url, class: "rounded-circle" if @user.image? %>
    <div class = "row">
      <div class = "col-sm-6">
        <div class = "form-group">
          <%= f.label :image, "プロフィール画像" %>
          <%= f.file_field :image, class: "form-control" %>
        </div>
        <div class = "form-group" >
          <%= f.label :profile, "自己紹介" %>
          <%= f.text_area :profile, class: "form-control" %>
        </div>
      </div>
      <div class = "col-sm-6">
        <div class = "row">
          <div class = "col-sm-6">
            <div class = "form-group" >
              <%= f.label :training_years, "トレーニング歴(年)" %>
              <%= f.number_field :training_years, min: 1, class: "form-control col-sm-6" %>
            </div>
            <div class = "form-group" >
              <%= f.label :age, "年齢(歳)" %>
              <%= f.number_field :age, min: 1, class: "form-control col-sm-6" %>
            </div>
          </div>
          <div class = "col-sm-6">
            <div class = "form-group" >
              <%= f.label :weight, "体重(kg)" %>
              <%= f.number_field :weight, min: 1, class: "form-control col-sm-6" %>
            </div>
            <div class = "form-group" >
              <%= f.label :sex, "性別"%>
              <div>
                <%= f.radio_button :sex, "男性" %>
                <%= f.label :sex, "男性" %>
                <%= f.radio_button :sex, "女性" %>
                <%= f.label :sex, "女性" %>
                <%= f.radio_button :sex, "その他" %>
                <%= f.label :sex, "その他"%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= f.submit "プロフィールを更新", class: "btn btn-primary btn-block" %>
<% end %>
