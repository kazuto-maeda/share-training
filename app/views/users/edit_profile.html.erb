<h3>プロフィール編集</h3>

<% if @user.errors.any? %>
      <div id = "error-expranation" class = "alert alert-warning">
        <ul class = "mb-0">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

<%= form_with(model: @user, url: "/users/#{@user.id}/update_profile",local: true) do |f| %>
  <div class = "form-group">
    <%= f.label :image, "画像" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class = "form-group" >
    <%= f.label :profile, "自己紹介" %>
    <%= f.text_area :profile, class: "form-control" %>
  </div>
  <div class = "row">
    <div class = "form-group col-sm-3" >
      <%= f.label :training_years, "トレーニング歴" %>
      <%= f.number_field :training_years, class: "form-control" %>
    </div>
    <div class = "form-group col-sm-2" >
      <%= f.label :age, "年齢" %>
      <%= f.number_field :age, class: "form-control" %>
    </div>
    <div class = "form-group col-sm-2" >
      <%= f.label :weight, "体重" %>
      <%= f.number_field :weight, class: "form-control" %>
    </div>
    <div class = "form-group col-sm-3" >
      <%= f.label :sex, "性別"%>
      <div>
        <%= f.radio_button :sex, "男性" %>
        <%= f.label :sex, "男性" %>
        <%= f.radio_button :sex, "女性" %>
        <%= f.label :sex, "女性" %>
        <%= f.radio_button :sex, "その他" %>
        <%= f.label :sex, "その他"%>
      </div>
    </div>
  </div>
  <%= f.submit "更新" %>
<% end %>