<h3>通知一覧</h3>

<% @alerts.each do |alert| %>
  <% if alert.favorite != nil%>
    <div class = "border p-2 mb-2 rounded col-sm-8 shadow-sm">
      <%= image_tag alert.favorite.user.image.index_user.url, class: "rounded-circle" if alert.favorite.user.image? %>
      <%= link_to(alert.favorite.user.name ,user_path(alert.favorite.user))%>があなたの
      <%= link_to("投稿",tweet_path(alert.favorite.tweet))%>にいいねしました
    </div>
  <% elsif alert.comment != nil %>
    <div class = "border p-2 mb-2 rounded col-sm-8 shadow-sm">
      <%= image_tag alert.comment.user.image.index_user.url, class: "rounded-circle" if alert.comment.user.image? %>
      <%= link_to(alert.comment.user.name, user_path(alert.comment.user)) %>があなたの
      <%= link_to("投稿", tweet_path(alert.comment.tweet))%>にコメントしました
    </div>
  <% else %>
    <div class = "border p-2 mb-2 rounded col-sm-8 shadow-sm">
      <%= image_tag alert.relationship.user.image.index_user.url, class: "rounded-circle" if alert.relationship.user.image? %>
      <%= link_to(alert.relationship.user.name, user_path(alert.relationship.user)) %>があなたをフォローしました
    </div>
  <% end %>
<% end %>

<%= paginate @alerts %>