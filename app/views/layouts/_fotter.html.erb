<div class = "bg-light mb-2 mt-4 p-3">
  <div class = "text-center">
    <% if logged_in?%>
        <%= link_to("ログアウト", logout_path, method: :delete, data: { confirm: "本当にログアウトしますか？" }) %><br>
        <%= link_to("退会", signout_path, method: :delete, data: { confirm: "本当にアカウントを削除しますか？"}) %>
    <% else %>
      <%= link_to("新規登録", signup_path , class: "nav-link") %>
      <%= link_to("ログイン", login_path, class: "nav-link") %>
    <% end %>
  </div>
</div>