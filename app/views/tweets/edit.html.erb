<h3>投稿編集</h3>


<div class = "row">
  <div class = "offset-sm-2 col-sm-8">
    
    <%= form_with(model: @tweet, local: true ) do |f| %>
    <% if @tweet.errors.any? %>
      <div id = "error-expranation" class = "alert alert-warning">
        <ul class = "mb-0">
          <% @tweet.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          
        </ul>
      </div>
    <% end %>
      <div class = "form-group">
        <%= f.label :content, "感想(必須)" %>
        <%= f.text_area :content, size: "8x5", class: "form-control mb-4" %>
      </div>
      <div class = "form-group">
        <%= f.label :image, "画像" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <h3>トレーニング</h3>
          <%= f.fields_for :trainings do |training| %>
          <%= render("training_fields", f: training)%>
          <div id = "menu_add_point"></div>
          <% end %>
        <%= link_to_add_association "＋", f, :trainings, data: {association_insertion_node: "#menu_add_point"}%>
      <%= f.submit "投稿", class: "btn btn-primary btn-block"%>
    <% end %>
  </div>
</div>

