<h3>編集</h3>
<div class = "row">
  <div class = "offset-sm-2 col-sm-8">
    <%= form_with(model: @tweet, local: true ) do |f| %>
      <div class = "form-group">
        <%= f.label :content, "感想(必須)" %>
        <%= f.text_area :content, size: "8x10", class: "form-control mb-4" %>
      </div>
      <%= f.submit "更新", class: "btn btn-primary btn-block"%>
    <% end %>
  </div>
</div>
