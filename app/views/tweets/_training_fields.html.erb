<div class = "nested-fields">
  <div class = "row">
      <div class = "form-group col-sm-6">
        <%= f.label :menu, "メニュー" %>
        <%= f.text_field :menu, class: "form-control" %>
      </div>
      <div class = "form-group col-sm-2">
        <%= f.label :weight, "重量(kg)" %>
        <%= f.number_field :weight , class: "form-control" , min: 1 , max: 200 %>
      </div>
      <div class = "form-group col-sm-2">
        <%= f.label :count, "回数" %>
        <%= f.number_field :count, class: "form-control" , min: 1 , max: 100 %>
      </div>
      <div class = "form-group col-sm-2">
        <%= f.label :set, "セット" %>
        <div class = "text-right">
          <%= f.number_field :set, class: "form-control mb-2" , min: 1 , max: 20 %>
          <%= link_to_remove_association "削除", f , class: "btn-sm btn-danger"%>
        </div>
      </div>
    </div>
</div>